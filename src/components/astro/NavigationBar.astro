---
import logoCircle from "@/assets/media/ai_slop_logo_circle.png?url";

const links = [
  { label: "Papers", href: "/papers" },
  { label: "Submit", href: "/submit" },
  { label: "About", href: "/about" },
  { label: "FAQ", href: "/faq" },
];
---

<nav aria-label="Main" class="mb-6 flex flex-col gap-3 rounded-[28px] border border-[color:var(--coffee-light)] bg-[color:var(--paper)]/85 px-4 py-3 shadow-[0_10px_25px_rgba(35,24,21,0.15)] backdrop-blur-sm md:flex-row md:items-center md:gap-6">
  <div class="flex items-center justify-between gap-3">
    <a href="/" class="flex items-center gap-3">
      <span class="relative h-11 w-11 overflow-hidden rounded-full border border-[color:var(--coffee)] bg-[color:var(--coffee-light)]/70 sm:h-12 sm:w-12">
        <img src={logoCircle} alt="AI Slop circular badge" class="h-full w-full object-cover" />
        <span class="absolute inset-1 rounded-full border border-[color:var(--coffee)] opacity-60" aria-hidden="true" />
      </span>
      <div>
        <p class="text-[0.55rem] uppercase tracking-[0.2em] text-[color:var(--ink-soft)] sm:text-[0.65rem] sm:tracking-[0.35em]">The Journal of AI Slopâ„¢</p>
        <p class="text-[0.7rem] font-semibold text-[color:var(--ink)] sm:text-xs">All Sarcasm, No Rigour</p>
      </div>
    </a>
  </div>

  <div class="flex flex-wrap gap-4 border-t border-[color:var(--coffee-light)] pt-3 text-[0.55rem] font-semibold uppercase tracking-[0.18em] text-[color:var(--ink-soft)] md:ml-auto md:border-t-0 md:pt-0 md:text-[0.65rem] md:tracking-[0.35em]">
    {links.map((item) => (
      <a href={item.href} class="relative before:absolute before:-bottom-1 before:left-0 before:h-[2px] before:w-0 before:bg-[color:var(--accent-blue)] before:transition-all before:duration-200 hover:text-[color:var(--ink)] hover:before:w-full">
        {item.label}
      </a>
    ))}
  </div>
</nav>
