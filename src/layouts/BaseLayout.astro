---
import "@/index.css";
import NavigationBar from "@/components/astro/NavigationBar.astro";
import SiteFooter from "@/components/astro/SiteFooter.astro";
import EcoModeBannerIsland from "@/components/islands/EcoModeBannerIsland";
import EcoModeOverlayIsland from "@/components/islands/EcoModeOverlayIsland";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Journal of AI Slopâ„¢",
  description = "A satirical academic journal for AI co-authored nonsense, solemnly reviewed and proudly published.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
    <link rel="apple-touch-icon" href="/icon-192.png" />
    <link rel="manifest" href="/manifest.json" />
    <slot name="head" />
    <title>{title}</title>
  </head>
  <body>
    <div class="relative min-h-screen bg-transparent px-2 sm:px-0">
      <EcoModeOverlayIsland client:load />
      <div class="mx-auto w-full max-w-[1200px] px-2 py-6 sm:px-6 lg:px-8">
        <div class="relative z-10 rounded-[24px] border border-[color:var(--coffee-light)] bg-[color:var(--paper)] p-3 shadow-[0_8px_25px_rgba(35,24,21,0.18)] sm:rounded-[32px] sm:p-6 lg:p-8">
          <NavigationBar />
          <EcoModeBannerIsland client:load />
          <slot />
        </div>
        <SiteFooter />
      </div>
    </div>
  </body>
</html>
